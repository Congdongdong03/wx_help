# 数据库配置
DATABASE_URL="file:./wx_help.sqlite"

# 服务器配置
PORT=3000
NODE_ENV=development

# 微信小程序配置
# 请替换为您的实际微信小程序 AppID 和 AppSecret
WECHAT_APP_ID=your_wechat_app_id_here
